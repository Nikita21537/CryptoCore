# Установите зависимости
pip install -r requirements.txt

# Или установите пакет
pip install .

# Запустите тесты
python -m unittest tests/test_cryptocore.py

# Создайте тестовый файл
echo "Hello, CryptoCore! This is a test message for encryption." > test.txt

# Шифрование
python cryptocore.py --algorithm aes --mode ecb --encrypt --key 000102030405060708090a0b0c0d0e0f --input test.txt --output encrypted.bin

# Дешифрование  
python cryptocore.py --algorithm aes --mode ecb --decrypt --key 000102030405060708090a0b0c0d0e0f --input encrypted.bin --output decrypted.txt

# Проверка
diff test.txt decrypted.txt
