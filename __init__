from .ecb import ECB
from .cbc import CBC
from .ctr import CTR
from .gcm import GCM

def get_mode(mode_name: str, key: bytes, **kwargs):

    modes = {
        'ecb': ECB,
        'cbc': CBC,
        'ctr': CTR,
        'gcm': GCM,
    }
    
    if mode_name not in modes:
        raise ValueError(f"Unsupported mode: {mode_name}")
    
    return modes[mode_name](key, **kwargs)

__all__ = ['ECB', 'CBC', 'CTR', 'GCM', 'get_mode']
